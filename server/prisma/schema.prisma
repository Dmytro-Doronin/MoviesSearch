generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MediaType {
  MOVIE
  TV
}

model User {
  id           String         @id @default(cuid())
  login        String
  email        String         @unique
  passwordHash String
  passwordSalt String
  imageUrl     String?
  role         String         @default("user")
  createdAt    DateTime       @default(now())

  tokens       RefreshToken?
  wishlist     WishlistItem[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @unique
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Movie {
  id             Int      @id

  title          String
  overview       String

  releaseDate    DateTime? @map("release_date")

  posterPath     String?   @map("poster_path")
  backdropPath   String?   @map("backdrop_path")

  popularity     Float
  voteAverage    Float     @map("vote_average")
  voteCount      Int       @map("vote_count")
}

model TvShow {
  id               Int      @id

  name             String
  originalName     String
  overview         String

  firstAirDate     DateTime? @map("first_air_date")

  posterPath       String?   @map("poster_path")
  backdropPath     String?   @map("backdrop_path")

  originalLanguage String
  popularity       Float
  voteAverage      Float     @map("vote_average")
  voteCount        Int       @map("vote_count")
}

model WishlistItem {
  id        String     @id @default(cuid())
  userId    String
  tmdbId    Int
  mediaType MediaType
  order     Int
  createdAt DateTime   @default(now())

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tmdbId, mediaType])
  @@index([userId, order])
  @@index([tmdbId, mediaType])
}
